<%= simple_nested_form_for @shift, html: { class: 'form-horizontal' } do |f| %>

<div class="row">
  <div class="span7">
    <%= render :partial => "shift_fields", :locals => { :f => f } %>
  </div>

  <div class="span5">
    <legend>Shift Jobs</legend>
    <div id="shift_jobs">
      <%= f.simple_fields_for :shift_jobs do |shift_jobs_form| %>
      <%= render :partial => "shift_jobs_fields", :locals => { :f => shift_jobs_form } %>
      <% end %> 
      <p>
        <br /><%= f.link_to_add("Add Job", :shift_jobs, :class => 'button tiny') %>
      </p>
    </div> 
  </div>

</div>
<% end %>