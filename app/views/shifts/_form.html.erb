<%= simple_form_for @shift, html: { class: 'form-horizontal' } do |f| %>
<fieldset>
  <legend><%= controller.action_name.capitalize %> Shifts</legend>

  <%= f.input :assignment_id, :collection => @assignments, label_method: ->(a){ a.employee.name }, :include_blank => true, input_html: {class: "avg"} %>
  <%= f.input :date, :label => "Date", :as => :date, :start_year => Date.today.year, :end_year => Date.today.year - 1, :order => [:month, :day, :year] %>
  <%# Only show the end_date on 'edit', not 'new' %>
  <%# if controller.action_name == "edit" %>
  <%#= f.input :end_date, :label => "End Date", :as => :date, :start_year => Date.today.year, :end_year => Date.today.year - 1, :order => [:month, :day, :year] %>
  <%# end %>
  <%= f.input :start_time, :label => "Start-Time", :as => :datetime_picker%>
  <%= f.input :notes, :label => "Notes"%>

  <div class="form-actions">
    <%= f.submit nil, :class => 'button radius' %>
    <%= link_to 'Cancel', assignments_path, :class => 'button alert radius' %>
  </div>
</fieldset>
<% end %>