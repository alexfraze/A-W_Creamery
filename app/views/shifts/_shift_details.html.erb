<h3>Shift Details</h3>
<p>
  <h4>
    Employee: <%= @shift.assignment.employee.name %>
  </h4>
</p>

<p>
  <h4>Phone:
  <%= number_to_phone @shift.assignment.employee.phone %> </h4>
</p>

<p>
  <h4>
    Date: <%= @shift.date.strftime('%m/%d/%y') %>
  </h4>
</p>

<p>
  <h4>
    Start: <%= @shift.start_time.strftime("%l:%M %p")%>
  </h4>
</p>

<p>
  <h4>
    End: <%= @shift.end_time.strftime("%l:%M %p") %>
  </h4>
</p>

