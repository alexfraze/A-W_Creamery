<% if jobs.empty? %>
<p><em>There are no <%= state %> jobs at this time.</em></p>
<% else %>
<h3><%= state.capitalize %> Jobs</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    <% jobs.each do |job| %>
    <tr>
      <td><%= job.name %></td>
      <td><%= job.description %> </td>
      <td>
        <%= link_to(edit_job_path(job), class: 'button tiny radius warning') do %>
        &nbsp;Edit&nbsp;
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%#= will_paginate shifts, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>  
<% end %>
<p>&nbsp;</p>