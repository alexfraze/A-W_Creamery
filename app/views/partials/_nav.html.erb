<div class="contain-to-grid">
  <nav class="top-bar" data-topbar role="navigation"> 
   <section class="top-bar-section">
    <ul class="left">

      <!-- link to home -->
      <li><%= link_to "Home", home_path %></li>

      <!-- options for stores -->
      <li class="has-dropdown">
        <%= link_to "Stores", stores_path %>
        <ul class="dropdown">
          <li><%= link_to "Store List", stores_path %></li>
          <% if !current_user.nil? and current_user.role? :admin%>
          <li><%= link_to "Add a Store", new_store_path %></li>
          <% end %>
        </ul>
      </li>

      <% unless current_user.nil? or current_user.role? :guest%>
      <!-- options for employees -->
      <li class="has-dropdown">
        <%= link_to "Employees", employees_path %>
        <ul class="dropdown">
          <li><%= link_to "Employee List", employees_path %></li>
          <% if !current_user.nil? and current_user.role? :admin%>
          <li><%= link_to "Add an Employee", new_employee_path %></li>
          <% end %>
        </ul>
      </li>

      <!-- options for assignments -->
      <li class="has-dropdown">
        <%= link_to "Assignments", assignments_path %>
        <ul class="dropdown">
          <li><%= link_to "Assignments List", assignments_path %></li>
          <% if !current_user.nil? and current_user.role? :admin%>
          <li><%= link_to "Create New Assignment", new_assignment_path %></li>
           <% end %>
        </ul>
      </li>

      <li class="has-dropdown">
        <%= link_to "Shifts", shifts_path %>
        <ul class="dropdown">
          <li><%= link_to "Shifts", shifts_path %></li>
          <li><%= link_to "Past Shifts", past_shifts_path %></li>
          <li><%= link_to "Future Shifts", future_shifts_path %></li>
          <li><%= link_to "New Shift", new_shift_path %></li>
        </ul>
      </li>

      <li >
        <%= link_to "Flavors", flavors_path %>
      </li>


      <li >
        <%= link_to "Jobs", jobs_path %>
      </li>
      <%end%>

      <div id="login">  <% if logged_in? %>
        <%= link_to 'Logout', logout_path %>
        <br>[<%= current_user.employee.proper_name %>:<%= current_user.employee.role%>@<%= current_user.employee.current_assignment.store.name if !current_user.employee.current_assignment.nil? && !current_user.employee.current_assignment.store.nil?%>]
        <% else %>
        <%= link_to 'Login', login_path %>
        <% end %>
      </div>




    </ul>

  </section>
</nav>
</div>